<%= form_for(@vehicle) do |f| %>
  <% if @vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

      <ul>
      <% @vehicle.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :Select_Driver %><br />
    <%= f.select :user_id, @profiles.collect {|p| [ p.user.full_name, p.id ] }, {include_blank: 'None'} %>
  </div>

  <div class="field">
    <%= f.label :vehicle_make %><br />
    <%= f.text_field :vehicle_make, :placeholder => "eg. Tata Indica, Toyota etios" %>
  </div>
  <div class="field">
    <%= f.label :vehicle_number %><br />
    <%= f.text_field :vehicle_number, :placeholder => "eg. MH-03 BG- 7661" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
